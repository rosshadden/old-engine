- if(everyauth.loggedIn)
  #game
    canvas#screen(width=600, height=400)
  #log
  - if(false)
    #authed
      - if(everyauth.twitter)
        span
          Hi #{everyauth.twitter.user.name} from Twitter!
        span
          img(src='#{everyauth.twitter.user.profile_image_url}')
      - if(everyauth.facebook)
        span Hi #{everyauth.facebook.user.name} from Facebook!
      - if(everyauth.github)
        span Hi #{everyauth.github.user.name} from GitHub!
        span
          img(src="https://secure.gravatar.com/avatar/#{everyauth.github.user.gravatar_id}")
      div
        a(href="/logout") Sign Out
  script(src='/socket.io/socket.io.js')
  script(src = '/js/require.js','data-main' = 'js/main')
- else
  #login
    #register
      a(href='/register') Register
    #loginPassword
      a(href='/login') Login with Password
    #loginTwitter
      a.button(href='/auth/twitter')
        img(src='https://si0.twimg.com/images/dev/buttons/sign-in-with-twitter-l.png')
    #loginGithub
      a.button(href='auth/github')
        img(src='http://github.com/intridea/authbuttons/raw/master/png/github_64.png')
    #loginGoogle
      span Broken now, for some reason:
      a.button(href='auth/google')
        img(src='https://www.google.com/favicon.ico')
    #loginFacebook
      span Broken now, for some reason:
      a.button(href='auth/facebook')
        img(src='http://facebook.com/favicon.ico')